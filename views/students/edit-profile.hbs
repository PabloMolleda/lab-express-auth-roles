<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Complete your profile</h1>

            <hr>

            <form action="/students/edit-profile/{{id}}" method="POST">

                <div class="form-group">
                    <label for="profileImg">Profile Image</label>
                    <input type="text" class="form-control" name="profileImg" id="profileImg">
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" name="description" id="description">
                </div>

                <button type="submit" class="btn btn-dark btn-block btn-lg">Send it!</button>

            </form>
        </div>

    </div>

</div>